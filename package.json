{
  "name": "culinaria",
  "private": true,
  "version": "1.0.0",
  "description": "CULINARIA - Professional Cooking Platform & Recipe Discovery",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "protect": "node scripts/protect-code.js",
    "security-check": "node scripts/security-monitor.js",
    "copyright-check": "node scripts/protect-code.js && node scripts/security-monitor.js",
    "deploy": "node scripts/deploy.js",
    "deploy:vercel": "npm run deploy && vercel",
    "deploy:netlify": "npm run deploy && netlify deploy",
    "deploy:firebase": "npm run deploy && firebase deploy",
    "type-check": "tsc --noEmit",
    "performance": "npm run build && npm run preview",
    "cleanup": "node scripts/dev-cleanup.js",
    "cleanup:full": "node scripts/dev-cleanup.js --full",
    "cleanup:check": "node scripts/dev-cleanup.js --check",
    "dev:clean": "npm run cleanup && npm run dev",
    "dev:fresh": "npm run cleanup:full && npm install && npm run dev",
    "health-check": "node -e \"import('./src/utils/moduleHealthCheck.js').then(m => m.default.logHealthCheck())\"",
    "troubleshoot": "npm run cleanup:check && npm run health-check",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^10.7.1",
    "lucide-react": "^0.525.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.4",
    "react-router-dom": "^7.6.3",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "@types/node": "^24.0.12",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "terser": "^5.43.1",
    "tw-animate-css": "^1.3.5",
    "vite": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
